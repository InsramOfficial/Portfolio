@using Portfolio.ViewModel;
@model PortfolioVM
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h4>Update your Portfolio</h4>
            <form method="post" asp-action="UpdatePortfolio" enctype="multipart/form-data" asp-controller="Admin">
                <div class="form-group">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input asp-for="id" hidden class="form-control" />
                    <input asp-for="ImageName" hidden class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Description"></label>
                    <input class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Image"></label>
                    <input class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update Portfolio</button>
            </form>

        </div>
        <div class="col-md-4"></div>


    </div>



</div>
