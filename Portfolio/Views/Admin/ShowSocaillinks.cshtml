@using Portfolio.Models;
@model SocialLinks
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h4>Update your Social Links </h4>
            <form method="post" asp-action="UpdatesSocaillinks" asp-controller="Admin">
                <div class="form-group">
                    <label class="form-label" asp-for="Twiter"></label>
                    <input class="form-control" asp-for="Twiter">
                    <span asp-validation-for="Twiter" class="text-danger"></span>
                    <input asp-for="id" hidden class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Facebook"></label>
                    <input class="form-control" asp-for="Facebook">
                    <span asp-validation-for="Facebook" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Instagram"></label>
                    <input class="form-control" asp-for="Instagram">
                    <span asp-validation-for="Instagram" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update Links</button>
            </form>



        </div>
        <div class="col-md-4"></div>


    </div>



</div>