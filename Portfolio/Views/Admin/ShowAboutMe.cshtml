@using Portfolio.Models;
@model Aboutme
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h4>Update your About Details</h4>
            <form method="post" asp-action="UpdateAboutMe" asp-controller="Admin">
                <div class="form-group">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input asp-for="id" hidden class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Description"></label>
                    <input class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Designation"></label>
                    <input class="form-control" asp-for="Designation">
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update Details</button>
            </form>



        </div>
        <div class="col-md-4"></div>


    </div>



</div>